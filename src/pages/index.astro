---
import BaseHead from '../components/BaseHead.astro';
import CaseStudy from '../components/case-study-thumbnail/CaseStudy';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import HeroImage from "../assets/images/home-heading.jpg";
import { Image } from 'astro:assets';
import NolaTransitCaseStudyVideo from "../assets/images/case-studies/nola-transit/nola-transit.webm";
import TorshDesignSystemCaseStudyVideo from "../assets/images/case-studies/torsh-design-system/torsh-design-system-promo.webm";
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<header class="hero">
				<div class="heading-container">
					<h1>Andrew's Design Hub</h1>
					<p>üìçBased in New Orleans | Design & Code @ 
						<a href="https://www.ndgcommunications.com/" target="_blank">NDG Communications</a>
					</p>
				</div>
				<Image src={HeroImage} alt="Andrew's Design Hub" height="460" width="460" />
			</header>
			<section class="bio-section">
				<div class="copy-container">
					<p class="heading">Designer / Developer / Design Systems Enthusiast</p>
					<p class="copy">Hi, I'm Andrew. I work with companies to bridge the gap between design and development, write CSS, and to build cool things in the browser.</p>
				</div>
			</section>
			<section>
				<h2>A Small Selection of my Work</h2>
				<p>Just a small selection of work from over the years. Click on any of them to learn more!</p>
				<div class="case-study-container">
					<CaseStudy 
						client:idle
						title="NOLA Transit UI Overhaul"
						thumbnailAssetSrc={NolaTransitCaseStudyVideo}
						copy="The NOLA Transit app, a volunteer initiative by Code for America New Orleans, provides real-time tracking of buses and streetcars for New Orleanians. This essential feature, previously part of the official city-owned public transit app, was omitted in the launch of their redesigned app Le Pass, prompting community volunteers to create this open-source web app. My role involved refactoring the front-end and redesigning the UI to prioritize mobile users."
						ctaCopy="View Site"
						ctaUrl="https://nolatransit.fly.dev/"
						ctaCopyTwo='Read More'
					/>
					<CaseStudy 
						client:idle
						title="TORSH Design System"
						thumbnailAssetSrc={TorshDesignSystemCaseStudyVideo}
						copy="While at TORSH, I identified the need for a scalable design library to address inconsistencies caused by the growing design team. By conducting a comprehensive UI teardown and organizing our components,  I developed a design system based on Atomic Design principles, establishing consistent typography, color schemes, and reusable components. This design library helped save a ton of time designing in Sketch and gave our small team a consistent framework to build our designs."
						ctaCopy="Read More"
						ctaUrl="https://nolatransit.fly.dev/"
					/>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style lang="scss">
	@import "../styles/mixins.scss";
	.hero {
		align-items: center;
		display: flex;
		gap: 4rem;
		margin: 4rem 0;
		& h1 {
			margin-bottom: 1.5rem;
		}
		& p {
			font-size: 1.7rem;
		}
		& img {
			max-width: 35%;
			height: auto;
			border-radius: 25px;
			opacity: 0.65;
			filter: sepia(0.2);
			box-shadow: var(--global-box-shadow);
		}
	}
	section {
		margin: 16rem 0;
		text-align: center;
		font-size: 1.3rem;
		h2 {
			margin-bottom: 0.5rem;
		}
	}

	.bio-section {
		display: flex;
		place-content: center;
		padding: 2rem 0;
		border-top: solid 1px #var(--color-black);
		border-bottom: solid 1px #var(--color-black);
		& .copy-container {
			display: flex;
			align-items: center;
			justify-content: space-evenly;
			gap: 2rem;
			width: 60%;
			text-align: left;
		}
		& .heading {
			font-size: 1.7rem;
			width: 100%;
			height: fit-content;
		}
		& .copy {
			font-size: 1.3rem;
			opacity: 0.75;
			width: 100%;
			height: fit-content;
		}
	}
	.case-study-container {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		margin: 3rem 0;
		gap: 3rem;
	}

	@include tabletDown {
		.bio-section {
			.copy-container {
				flex-direction: column;
				gap: 1rem;
				width: 100%;
			}
		}

		section {
			margin: 10rem 0;
		}
	}

	@include tabletOnly {
		.case-study-container {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@include mobileOnly {
		.hero {
			flex-direction: column;
			p {
				font-size: 1.3rem;
			}
			img {
				max-width: unset;
				width: 100%;
			}
		}
		section {
			margin: 8rem 0;
		}
		.case-study-container {
			grid-template-columns: 1fr;
		}
	}

</style>
